<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Convidar
          <small>...</small>
        </h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <p>Número de Convites: <b><%= current_usuario.convites_disponiveis %> Convites</b></p>
        <p>Convites Usados: <b><%= current_usuario.convites_usados %> Convites</b></p>
        <%= simple_form_for @usuario ? @usuario : resource, as: resource_name, url: invitation_path(resource_name), html: {class: "form-horizontal form-label-left", method: :post} do |f| %>
          <div class="nav navbar-right">
            <%= f.button :submit, "Enviar Convite", class: "btn btn-success", title: ("Nenhum Convite Disponível" if current_usuario.convite_disponivel?), disabled: current_usuario.convite_disponivel? %>
          </div>
          <div class="x_content">
            <div class="divider-dashed"></div>
            <%= f.hidden_field :tipo, value: "representante" %>
            <%= f.hidden_field :invited_by_id, value: current_usuario.industria.id %>
            <%= f.hidden_field :invited_by_type, value: "Industria" %>

            <%= f.input :nome %>
            <%= f.input :email, required: true %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
