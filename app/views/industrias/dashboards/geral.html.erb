<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard_graph">

      <div class="row x_title">
        <div class="col-md-6">
          <h3>Receitas
            <small>nos Ãºltimos 6 meses</small>
          </h3>
        </div>
      </div>

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div id="grafico_receitas" class="demo-placeholder"></div>
      </div>

      <div class="clearfix"></div>
    </div>
  </div>

</div>

<script>
    function grafico_6_meses() {

        var receitas = [];

        <% @vendas_6_meses.each do |solicitacoes| %>
        receitas.push([gd(<%= solicitacoes.mes.year %>, <%= solicitacoes.mes.month %>, <%= solicitacoes.mes.day %>), <%= solicitacoes.vendas %>])
        <% end %>

        var grafico_receitas_settings = {
            series: {
                lines: {
                    show: true,
                    fill: true
                },
                points: {
                    radius: 0,
                    show: true
                },
                shadowSize: 2
            },
            grid: {
                verticalLines: true,
                hoverable: true,
                clickable: true,
                tickColor: "#d5d5d5",
                borderWidth: 1,
                color: '#fff'
            },
            colors: ["rgba(3, 88, 106, 0.38)"],
            xaxis: {
                tickColor: "rgba(51, 51, 51, 0.06)",
                mode: "time",
                tickSize: [1, "month"],
                tickLength: 10,
                axisLabel: "Date",
                axisLabelUseCanvas: true,
                axisLabelFontSizePixels: 12,
                axisLabelFontFamily: 'Verdana, Arial',
                axisLabelPadding: 10
            },
            yaxis: {
                ticks: 8,
                tickColor: "rgba(51, 51, 51, 0.06)",
            },
            tooltip: false
        }

        if ($("#grafico_receitas").length) {

            $.plot($("#grafico_receitas"), [receitas], grafico_receitas_settings);
        }

    }
</script>
