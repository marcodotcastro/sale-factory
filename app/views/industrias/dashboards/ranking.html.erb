<div class="row">
  <div class="col-md-6 col-sm-6 col-lg-6">
    <div class="text-center">
      <h1>REPRESENTANTES</h1>
    </div>
    <div class="x_panel tile fixed_height_100_pc">
      <div class="x_title">
        <h2><i class="fa fa-sort-numeric-asc"></i> TOP 10 MAIS VENDAS</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <% @representantes_mais_vendas.each do |representante| %>
          <div class="widget_summary">
            <div class="w_left w_70">
              <%= link_to industria_representante_path(current_usuario.industria, representante) do %>
                <span title="<%= representante.descricao %>"><%= representante.descricao %></span>
              <% end %>
            </div>
            <div class="w_center w_30">
              <div class="progress">
                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: <%= representante.solicitacoes_por_representante %>%;">
                  <span class="sr-only"><%= representante.solicitacoes_por_representante %>% Complete</span>
                </div>
              </div>
            </div>
            <div class="w_right w_20">
              <span><%= representante.solicitacoes_por_representante %></span>
            </div>
            <div class="clearfix"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-6 col-lg-6">
    <div class="text-center">
      <h1>LOJISTAS</h1>
    </div>
    <div class="x_panel tile fixed_height_100_pc">
      <div class="x_title">
        <h2><i class="fa fa-sort-numeric-asc"></i> TOP 10 MAIS COMPRAS</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <% @lojistas_mais_compras.each do |lojista| %>
          <div class="widget_summary">
            <div class="w_left w_70">
              <%= link_to industria_lojista_path(current_usuario.industria, lojista) do %>
                <span title="<%= lojista.descricao %>"><%= lojista.descricao %></span>
              <% end %>
            </div>
            <div class="w_center w_30">
              <div class="progress">
                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: <%= lojista.solicitacoes_por_lojista %>%;">
                  <span class="sr-only"><%= lojista.solicitacoes_por_lojista %>% Complete</span>
                </div>
              </div>
            </div>
            <div class="w_right w_20">
              <span><%= lojista.solicitacoes_por_lojista %></span>
            </div>
            <div class="clearfix"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

