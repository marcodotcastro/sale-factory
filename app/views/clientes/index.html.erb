<% model = Cliente %>

<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
  <tr>
    <th><%= model.human_attribute_name(:descricao) %></th>
    <th><%= model.human_attribute_name(:contato) %></th>
    <th><%= model.human_attribute_name(:endereco) %></th>
    <th><%= model.human_attribute_name(:cep) %></th>
    <th><%= model.human_attribute_name(:telefone) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @clientes.each do |cliente| %>
    <tr>
      <td><%= cliente.descricao %></td>
      <td><%= cliente.contato %></td>
      <td><%= cliente.endereco %></td>
      <td><%= cliente.cep %></td>
      <td><%= cliente.telefone %></td>
      <td><%= link_to 'Show', cliente %></td>
      <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
      <td><%= link_to 'Destroy', cliente, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_cliente_path %>
