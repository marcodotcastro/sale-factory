<div class="row">
  <div class="text-center">
    <h1>REPRESENTANTES</h1>
  </div>
  <div class="col-md-4 col-sm-4 col-xs-12">
    <div class="x_panel tile fixed_height_320">
      <div class="x_title">
        <h2><i class="fa fa-sort-numeric-asc"></i> TOP 10 MAIS VENDAS</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <% @representantes_mais_vendas.each do |representante| %>
          <div class="widget_summary">
            <div class="w_left w_55">
              <% if current_usuario.cliente? %>
                <%= link_to cliente_representante_path(current_usuario.cliente, representante) do %>
                  <span title="<%= representante.descricao %>"><%= truncate representante.descricao, length: 25 %></span>
                <% end %>
              <% elsif current_usuario.representante? %>
                <i class="fa fa-lg fa-2x fa-user-circle"></i> Representante <%= representante.id + rand(1..10000) %>
              <% end %>
            </div>
            <div class="w_center w_25">
              <div class="progress">
                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: <%= representante.id*10 %>%;">
                  <span class="sr-only"><%= representante.id * 10 %>% Complete</span>
                </div>
              </div>
            </div>
            <div class="w_right w_20">
              <span><%= representante.id * 100 %></span>
            </div>
            <div class="clearfix"></div>
          </div>
        <% end %>
      </div>
    </div>
