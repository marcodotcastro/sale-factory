<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Produto
          <small>...</small>
        </h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <form data-parsley-validate class="form-horizontal form-label-left">

          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Descrição

            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <input type="text" readonly="readonly" class="form-control col-md-7 col-xs-12" value="<%= @produto.descricao %>">
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Preço

            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <input type="text" readonly="readonly" class="form-control col-md-7 col-xs-12" , value="<%= number_to_currency @produto.preco %>">
            </div>
          </div>

          <%#TODO: Mover para o helpers %>
          <% if current_usuario.cliente? %>
            <div class="form-group">
              <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                <%= link_to 'Editar', edit_cliente_produto_path(@cliente, @produto), class: "btn btn-primary" %>
                <%= link_to 'Excluir', cliente_produto_path(@cliente, @produto), method: :delete, class: "btn btn-danger", data: {confirm: 'Você tem certeza?'} %>
              </div>
            </div>
          <% end %>

        </form>
      </div>
    </div>
  </div>
</div>

