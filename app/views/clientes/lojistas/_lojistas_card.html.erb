<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Lojistas
        <small>...</small>
      </h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <% @lojistas.each do |lojista| %>
        <div class="col-md-4 col-sm-4 col-xs-12 profile_details">
          <div class="well profile_view">
            <div class="col-sm-12">
              <h4 class="brief"><i><span title="<%= lojista.descricao %>"><%= truncate lojista.descricao %></span></i>
              </h4>
              <div class="left col-xs-12">
                <h2><%= lojista.contato %></h2>
                <ul class="list-unstyled">
                  <li><i class="fa fa-building"></i> <strong>Endere√ßo: </strong>
                    <span title="<%= lojista.endereco %>"><%= truncate lojista.endereco %></span></li>
                  <li><i class="fa fa-envelope"></i> <strong>Email: </strong><%= lojista.email %></li>
                  <li><i class="fa fa-phone"></i> <strong>Telefone: </strong><%= lojista.telefone %></li>
                  <li><i class="fa fa-whatsapp"></i> <strong>Whatsapp: </strong><%= lojista.telefone_whatsapp %></li>
                </ul>
              </div>
            </div>
            <div class="col-xs-12 bottom text-center">
              <div class="col-xs-12 col-sm-6 emphasis"></div>
              <div class="col-xs-12 col-sm-6 emphasis">
                <% if current_usuario.representante? %>
                  <%= link_to representante_lojista_path(@representante, lojista) do %>
                    <button type="button" class="btn btn-primary btn-xs">
                      <i class="fa fa-eye"> </i> Detalhes
                    </button>
                  <% end %>
                <% elsif current_usuario.cliente? %>
                  <%= link_to cliente_lojista_path(@cliente, lojista) do %>
                    <button type="button" class="btn btn-primary btn-xs">
                      <i class="fa fa-eye"> </i> Detalhes
                    </button>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
