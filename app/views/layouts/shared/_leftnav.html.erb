                <%= link_to "Representantes", cliente_representantes_path(current_usuario.cliente) %>
              </li>
              <li>
                <%= link_to "Lojistas", cliente_lojistas_path(current_usuario.cliente) %>
              </li>
            </ul>
          </li>
