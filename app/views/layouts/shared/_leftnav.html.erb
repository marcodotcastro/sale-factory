<div class="navbar nav_title" style="border: 0;">
  <%#FIXME: Melhorar logo do cliente %>
  <%= foto_logo_url(current_usuario) %>
</div>

<div class="clearfix"></div>

<%#TODO: Mover cÃ³digo para o helpers %>
<div class="profile clearfix">
  <% if current_usuario %>
    <div class="profile_pic">
      <%= image_tag foto_avatar_url(current_usuario), class: "img-circle profile_img", size: "50x60" %>
    </div>
    <div class="profile_info">
      <span>Bem Vindo,</span>
      <h2><%= current_usuario.nome %></h2>
    </div>
  <% else %>
    <div class="profile_pic">
      <%= image_tag "user.png", class: "img-circle profile_img" %>
    </div>
    <div class="profile_info">
      <span>Bem Vindo</span>
    </div>
  <% end %>
</div>

<br/>

<% if current_usuario.cliente? %>
  <% if current_usuario.cliente %>
    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
      <div class="menu_section">
        <h3>General</h3>
        <ul class="nav side-menu">
          <li><a><i class="fa fa-home"></i> Principal <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Dashboard", dashboard_index_path %></li>
            </ul>
          </li>
          <li><a><i class="fa fa-edit"></i> Gerenciamento <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li>
                <%= link_to "Representantes", cliente_representante_comerciais_path(current_usuario.cliente) %>
              </li>
              <li>
                <%= link_to "Lojistas", lojistas_path %>
              </li>
            </ul>
          </li>
          <li><a><i class="fa fa-desktop"></i> Cadastro <span class="fa fa-chevron-down"></span></a>
            <% if current_usuario.cliente %>
              <ul class="nav child_menu">
                <li><%= link_to "Representante", new_usuario_invitation_path %></li>
              </ul>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
<% elsif current_usuario.representante_comercial? %>
  <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
    <div class="menu_section">
      <h3>General</h3>
      <ul class="nav side-menu">
        <li><a><i class="fa fa-home"></i> Principal <span class="fa fa-chevron-down"></span></a>
          <ul class="nav child_menu">
            <li><%= link_to "Dashboard", dashboard_index_path %></li>
          </ul>
        </li>
        <% if current_usuario.representante_comercial %>
          <li><a><i class="fa fa-edit"></i> Gerenciamento <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li>
                <%# %>
                <%= link_to "Lojistas", cliente_representante_comercial_lojistas_path(current_usuario.convite_cliente, current_usuario.representante_comercial) %>
              </li>
            </ul>
          </li>
        <% end %>
        <li><a><i class="fa fa-desktop"></i> Cadastro <span class="fa fa-chevron-down"></span></a>
          <ul class="nav child_menu">
            <%#TODO: Somente para venda %>
            <li><%= link_to "Equipe", new_usuario_invitation_path %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
<% end %>

