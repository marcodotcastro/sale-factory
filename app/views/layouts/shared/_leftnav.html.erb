              <li>
                <%# %>
                <%= link_to "Lojistas", representante_lojistas_path(current_usuario.representante) %>
              </li>
            </ul>
          </li>
        <% end %>
        <li><a><i class="fa fa-desktop"></i> Cadastro <span class="fa fa-chevron-down"></span></a>
          <ul class="nav child_menu">
            <%#TODO: Somente para venda %>
            <li><%= link_to "Equipe", new_usuario_invitation_path %></li>
            <li><%= link_to 'Lojista', new_representante_lojista_path(current_usuario.representante) %></li>
