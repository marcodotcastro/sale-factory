<%= link_to root_path do %>
  <div class="navbar nav_title" style="border: 0;">
    <%#FIXME: Melhorar logo do cliente %>
    <%= foto_logo_url(current_usuario) %>
  </div>
<% end %>

<div class="clearfix"></div>

<%#TODO: Mover código para o helpers %>
<div class="profile clearfix">
  <% if current_usuario %>
    <% if current_usuario.cliente? %>
      <% if current_usuario.cliente %>
        <%= link_to cliente_path(current_usuario.cliente) do %>
          <div class="profile_pic">
            <%= image_tag foto_avatar_url(current_usuario), class: "img-circle profile_img", size: "50x60" %>
          </div>
          <div class="profile_info">
            <span>Bem Vindo,</span>
            <h2><%= current_usuario.nome %></h2>
          </div>
        <% end %>
      <% else %>
        <%= link_to new_cliente_path do %>
          <div class="profile_pic">
            <%= image_tag foto_avatar_url(current_usuario), class: "img-circle profile_img", size: "50x60" %>
          </div>
          <div class="profile_info">
            <span>Bem Vindo,</span>
            <h2><%= current_usuario.nome %></h2>
          </div>
        <% end %>
      <% end %>
    <% elsif current_usuario.representante? %>
      <% if current_usuario.representante %>
        <%= link_to representante_path(current_usuario.representante) do %>
          <div class="profile_pic">
            <%= image_tag foto_avatar_url(current_usuario), class: "img-circle profile_img", size: "50x60" %>
          </div>
          <div class="profile_info">
            <span>Bem Vindo,</span>
            <h2><%= current_usuario.nome %></h2>
          </div>
        <% end %>
      <% else %>
        <%= link_to new_representante_path do %>
          <div class="profile_pic">
            <%= image_tag foto_avatar_url(current_usuario), class: "img-circle profile_img", size: "50x60" %>
          </div>
          <div class="profile_info">
            <span>Bem Vindo,</span>
            <h2><%= current_usuario.nome %></h2>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <div class="profile_pic">
      <%= image_tag "user.png", class: "img-circle profile_img" %>
    </div>
    <div class="profile_info">
      <span>Bem Vindo</span>
    </div>
  <% end %>
</div>

